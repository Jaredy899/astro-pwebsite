---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="-50 0 700 419"
	class={className}
	width="100"
	height="100"
>
	<g>
		<path
			class="letter j"
			aria-label="P"
			d="M80 0H285C307.091 0 325 17.9086 325 40V130C325 152.091 307.091 195 285 195H125V416.797H80V0Z M125 45V135C125 143.284 131.716 150 140 150H265C273.284 150 280 143.284 280 135V60C280 51.7157 273.284 45 265 45H140C131.716 45 125 51.7157 125 60V135Z"
		/>
		<path
			class="letter c"
			aria-label="C"
			d="M320 82.7372C320 37.0217 357.027 0 402.75 0H545V45H402.75C381.988 45 365.006 61.9759 365.006 82.7372V334.06C365.006 354.821 381.988 371.797 402.75 371.797H545V416.797H402.75C357.027 416.797 320 379.775 320 334.06V82.7372Z"
		/>
	</g>
</svg>

<style>
	svg {
		width: 100%;
		height: 100%;
		fill: currentColor;
	}
	.letter {
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		transform-origin: center;
	}
	.j {
		transform: translateX(-5px);
	}
	.c {
		transform: translateX(5px);
	}
	svg:hover .j {
		transform: translateX(-25px) scale(1.3);
	}
	svg:hover .c {
		transform: translateX(25px) scale(1.3);
	}
</style> 